{
	"name": "cursor-git-extension",
	"displayName": "Cursor Git Extension",
	"description": "Git repository management extension for Cursor IDE with configurable notifications",
	"version": "0.0.7",
	"publisher": "gypsy-dev",
	"engines": {
		"vscode": "^1.60.0"
	},
	"categories": [
		"SCM Providers",
		"Other"
	],
	"keywords": [
		"git",
		"repository",
		"status",
		"submodule",
		"automation"
	],
	"activationEvents": [
		"onWorkspaceReady",
		"workspaceContains:**"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "cursor-git-extension.showStatus",
				"title": "Show Git Status",
				"category": "Cursor Git"
			},
			{
				"command": "cursor-git-extension.runScript",
				"title": "Run Git Setup Script",
				"category": "Cursor Git"
			},
			{
				"command": "cursor-git-extension.openSettings",
				"title": "Open Extension Settings",
				"category": "Cursor Git"
			},
			{
				"command": "cursor-git-extension.test",
				"title": "Test Display Types",
				"category": "Cursor Git"
			},
			{
				"command": "cursor-git-extension.testConsolidated",
				"title": "Test Consolidated Messages",
				"category": "Cursor Git"
			}
		],
		"configuration": {
			"title": "Cursor Git Extension",
			"properties": {
				"cursor-git-extension.displayMappings": {
					"type": "object",
					"default": {
						"INFO": "notification",
						"WARN": "popup",
						"ERROR": "popup",
						"DEBUG": "output",
						"OK": "status"
					},
					"description": "Configure where different message types are displayed",
					"properties": {
						"INFO": {
							"type": "string",
							"enum": [
								"status",
								"popup",
								"notification",
								"output",
								"none"
							],
							"default": "notification",
							"description": "Where to display INFO messages"
						},
						"WARN": {
							"type": "string",
							"enum": [
								"status",
								"popup",
								"notification",
								"output",
								"none"
							],
							"default": "popup",
							"description": "Where to display WARNING messages"
						},
						"ERROR": {
							"type": "string",
							"enum": [
								"status",
								"popup",
								"notification",
								"output",
								"none"
							],
							"default": "popup",
							"description": "Where to display ERROR messages"
						},
						"DEBUG": {
							"type": "string",
							"enum": [
								"status",
								"popup",
								"notification",
								"output",
								"none"
							],
							"default": "output",
							"description": "Where to display DEBUG messages"
						},
						"OK": {
							"type": "string",
							"enum": [
								"status",
								"popup",
								"notification",
								"output",
								"none"
							],
							"default": "status",
							"description": "Where to display SUCCESS messages"
						}
					}
				},
				"cursor-git-extension.submodules": {
					"type": "array",
					"items": {
						"type": "string"
					},
					"default": [
						"ai-best-practices"
					],
					"description": "List of submodules to manage and keep up to date",
					"examples": [
						[
							"ai-best-practices",
							"shared-utils",
							"common-configs"
						]
					]
				},
				"cursor-git-extension.scriptPath": {
					"type": "string",
					"default": "/home/gypsy/dev/gypsys-cli-tools/cursor/cursor-git-setup.sh",
					"description": "Path to the git setup script",
					"format": "uri"
				},
				"cursor-git-extension.showOnStartup": {
					"type": "boolean",
					"default": true,
					"description": "Run the git setup script automatically when a workspace folder is opened"
				},
				"cursor-git-extension.autoRefreshInterval": {
					"type": "number",
					"default": 0,
					"minimum": 0,
					"maximum": 300,
					"description": "Auto-refresh git status interval in seconds (0 to disable)"
				}
			}
		},
		"menus": {
			"commandPalette": [
				{
					"command": "cursor-git-extension.showStatus",
					"when": "workspaceFolderCount > 0"
				},
				{
					"command": "cursor-git-extension.runScript",
					"when": "workspaceFolderCount > 0"
				},
				{
					"command": "cursor-git-extension.openSettings"
				},
				{
					"command": "cursor-git-extension.test"
				},
				{
					"command": "cursor-git-extension.testConsolidated"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js",
		"package": "vsce package",
		"publish": "vsce publish"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "14.x",
		"@types/vscode": "^1.60.0",
		"@typescript-eslint/eslint-plugin": "^4.26.0",
		"@typescript-eslint/parser": "^4.26.0",
		"eslint": "^7.27.0",
		"glob": "^7.1.7",
		"mocha": "^8.4.0",
		"typescript": "^4.3.2",
		"vscode-test": "^1.5.2"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/Imagination-Guild-LLC/gypsys-cli-tools.git"
	},
	"license": "MIT",
	"dependencies": {
		"@vscode/vsce": "^3.5.0",
		"vsce": "^2.15.0"
	},
	"__metadata": {
		"size": 153668305
	}
}